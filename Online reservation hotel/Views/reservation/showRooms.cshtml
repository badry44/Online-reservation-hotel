@model IEnumerable<Online_reservation_hotel.Models.RoomTransaction>

@{
    ViewBag.Title = "Show Rooms";
}

<h2>Show Rooms</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.roomName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roomTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.from)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.to)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numberOfDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.roomName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.roomTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.from)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.to)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numberOfDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            
            @Html.ActionLink("Cancel", "Cancel", "reservation", new { id = item.roomTransId }, new { @class = "cancel" })
        </td>
    </tr>
}

</table>

@section scripts{


    <script>
        $('.cancel').click(function () {
            var confirmation = confirm("Are you sure You want to cancel?");
            if (confirmation == false)
            {
                event.preventDefault();
            }

        });
    </script>
}
